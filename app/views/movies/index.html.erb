<!doctype html>
<h1>Movies</h1>
<table class="table table-bordered">
	<tbody>
    <% if @movies.count.zero? %>
      <tr>
        <td>
          No movies added yet
        </td>
      </tr>
      <% else %>
		<% @movies.each do |movie| %>

			<tr>
				<td><%= image_tag(movie.url, :height => "64")%></td>
				<td><%= link_to movie.title, movie, :class => "movieLink" %> - <%= link_to "Edit", edit_movie_path(movie), :class => "link" %> - <%= link_to "Delete", movie_path(movie), :class => "link", data: { turbo_method: :delete ,turbo_confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
  <% end %>
	</tbody>
</table>
<br>
<%= link_to "New Movie", new_movie_path, :class => "btn btn-primary" %>
